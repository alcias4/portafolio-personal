<style>
    .habiliades {
        background: linear-gradient(#3768c0, #1f386d);
        padding: 20px;
        height: 100px;
        width: 100px;
        border-radius: 50%;
    }

    .titlenebulosa::before {
        content: "";
        width: 200px;
        height: 140px;
        background-image: radial-gradient(closest-side,rgba(20, 84, 180, 0.966),#0b1121 );
        position: absolute;
        z-index: -10;
        scale: 1.2;
        top: 50px;
        opacity: 0.5;
    }

    .nobolusa{
        position: relative;
        width: 200px;
        height: 130px;
        background-image: radial-gradient(closest-side,rgba(20, 84, 180, 0.966),#0b1121 );
        position: absolute;
        z-index: -10;
        scale: 1.2;
        border-radius: 60%;
    }

    .slip1 {
        width: 300px;
        height: 150px;
        border: 1px solid rgba(20, 84, 180, 0.966);
        border-radius: 60%;
        margin-top: 20px;
        z-index: -100;
    }

    .slip2 {
        width: 320px;
        height: 150px;
        border: 1px solid rgba(20, 84, 180, 0.966);
        border-radius: 60%;
        margin-top: 20px;
        z-index: -100;
    }

    .slip3 {
        width: 350px;
        height: 150px;
        border: 1px solid rgba(20, 84, 180, 0.966);
        border-radius: 60%;
        margin-top: 20px;
        z-index: -100;
    }

    .barra1 {
        width: 20px;
        max-height: 250px;
        margin-bottom: 100px;

    }

    .barra2 {
        width: 20px;
        max-height: 250px;
        margin-bottom: 100px;
        transform: scaleX(-1);
    }

    .barra3 {
        width: 20px;
        max-height: 250px;
        margin-bottom: 100px;
        transform: rotate(-14deg);
    }

    .barra4 {
        width: 20px;
        max-height: 250px;
        margin-bottom: 100px;
        transform: scaleX(-1);
        rotate: calc(14deg);
    }
    .barra5 {
        width: 20px;
        max-height: 250px;
        margin-bottom: 100px;
        transform: rotate(-24deg);
    }
    .barra6 {
        width: 20px;
        max-height: 250px;
        margin-bottom: 100px;
        transform: scaleX(-1);
        rotate: calc(24deg);
    } 

</style>

