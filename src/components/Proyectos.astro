---
import project from "../data/projects.json"
---

<section id="projects" class="flex flex-col w-full min-h-screen relative p-10">
    <div class="flex justify-center h-[20vh] p-10 titlenebulosa">
        <h2 class="text-4xl uppercase font-bold mt-10">Proyectos</h2>
    </div>

    <ul class="w-full">
        {
            project.map(e => (
                <li class="w-full flex flex-col gap-10 articule mb-20">
                    <article class="flex flex-col">
                        <h3 class="text-3xl font-bold capitalize text-[#6491db] mb-5 flex items-center gap-2">
                            <svg   width="34"  height="34"  viewBox="0 0 24 24"  fill="none"  stroke="#425f8f"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 8l-4 4l4 4" /><path d="M17 8l4 4l-4 4" /><path d="M14 4l-4 16" /></svg>
                            {e.title}
                        </h3>
                        <p class="bg-white/10 p-4 rounded-2xl">{e.description.length > 150 ? `${e.description.slice(0, 150)}...`: e.description }</p>
                        <div class="flex  gap-5 py-5">
                            <a class="flex w-[100px] bg-[#29559ba6] h-[30px] justify-center items-center gap-2 rounded-md" target="_blank" href={e.link_code}>
                                <svg   width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="#ffffff"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round" ><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
                                Codigo
                            </a>
                            <a target="_blank" class="flex w-[100px] bg-[#29559ba6] h-[30px] justify-center items-center gap-2 rounded-md" href={e.link_page}>
                                <svg  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="#ffffff"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  ><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 15l6 -6" /><path d="M11 6l.463 -.536a5 5 0 0 1 7.071 7.072l-.534 .464" /><path d="M13 18l-.397 .534a5.068 5.068 0 0 1 -7.127 0a4.972 4.972 0 0 1 0 -7.071l.524 -.463" /></svg>
                                Pagina
                            </a>
                        </div>
                        <picture class="w-full max-w-[400px] h-[300px] bg-[#121f3b] pl-8 pt-5">
                            <img class="w-full h-full " src={e.img} alt="" />
                        </picture>
                    </article>
                </li>
            ))
        }

    </ul>
</section>

<style>
    .titlenebulosa::before {
    content: "";
    width: 200px;
    height: 140px;
    background-image: radial-gradient(closest-side,rgba(20, 84, 180, 0.966),#0b1121 );
    position: absolute;
    z-index: -10;
    scale: 1.2;
    top: 50px;
    opacity: 0.5;
    }

    .articule{
        font-family: "Poppins", sans-serif;
    }


    picture {
        border-radius: 10px;
        position: relative;
    }

    picture::before {
        content: "";
        width: 400px;
        height: 400px;
        background-image: radial-gradient(closest-side,rgba(20, 84, 180, 0.966),#0b1121 );
        position: absolute;
        z-index: -10;
        scale: 1.2;
        top: -120px;
        left: -2px;
        opacity: 0.5;
    }
    img {
        border-radius: 10px 0px 0px 0px;
    }

    a {
        transition: all 300ms ease;
    }

    a:hover {
        transform: translateY(-3px) ;
        box-shadow: 0px 0px 10px rgba(18, 60, 150, 0.685);
        
    }
    
</style>